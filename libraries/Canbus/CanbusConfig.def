#ifndef __ECU_CANBUSCONFIG_DEF__
// @cond
#define __ECU_CANBUSCONFIG_DEF__
// @endcond

/**
 * @brief Select the CAN to use on a teensy
 * CAN1 or CAN0 on T3.6 | CAN3 on T4.X
 */
#define CONF_FLEXCAN_CAN_SELECT CAN1

/**
 * @brief Set the baud rate at which the CAN line should run
 */
#define CONF_FLEXCAN_BAUD_RATE 1000000

/**
 * @brief Set the number of outgoing mailboxes
 * @note incoming mailboxes are automaticaly set, refer to CanBusMessages.def
 */
#define CONF_FLEXCAN_TX_MAILBOXES 3

/**
 * @brief Set whether to run in debug mode
 * basically just enables logging
 */
#define CONF_FLEXCAN_DEBUG 1

/**
 * @brief BMS Hardfault hex mask
 */
#define CONF_BITMASK_BMS_HARDFAULT 0x4000020120100080

/**
 * @brief RMS Hardfault hex mask
 */
#define CONF_BITMASK_RMS_HARDFAULT 0x0000000000000000

#endif // __ECU_CANBUSCONFIG_DEF__