{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    // These Tasks are meant to be run through WSL
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "detail": "Clean up build files",
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "detail": "Compile files",
            "presentation": {
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "command": "make hex",
            "problemMatcher": []
        },
        {
            "label": "Upload",
            "type": "shell",
            "detail": "Upload compiled files to the teensy",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "make upload",
            "problemMatcher": []
        },
        {
            "label": "Reboot",
            "type": "shell",
            "detail": "Ask for which com port",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "${workspaceFolder}/tools/ComMonitor.exe",
            "args": [
                "${input:TEENSY_USB_PORTNAME}",
                "134",
                "-c",
                "--priority"
            ],
            "problemMatcher": [],
            "dependsOrder": "sequence"
        },
        {
            "label": "Monitor",
            "type": "shell",
            "detail": "Ask for which com port",
            // "runOptions": {
            //     "instanceLimit": 3
            // }, // Allows multiple multiple monitors
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "${workspaceFolder}/tools/ComMonitor.exe",
            "args": [
                "${input:TEENSY_USB_PORTNAME}",
                "${config:TEENSY_BAUDRATE}",
                "-r"
            ],
            "problemMatcher": []
        },
        {
            "label": "RebootConf",
            "type": "shell",
            "detail": "Use com port set in settings",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "${workspaceFolder}/tools/ComMonitor.exe",
            "args": [
                "${config:TEENSY_USB_PORTNAME}",
                "134",
                "-c",
                "--priority"
            ],
            "problemMatcher": [],
            "dependsOrder": "sequence"
        },
        {
            "label": "MonitorConf",
            "type": "shell",
            "detail": "Use com port set in settings",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "${workspaceFolder}/tools/ComMonitor.exe",
            "args": [
                "${config:TEENSY_USB_PORTNAME}",
                "${config:TEENSY_BAUDRATE}",
                "-r"
            ],
            "problemMatcher": []
        },
        {
            "label": "Shebang",
            "type": "shell",
            "detail": "Run all tasks but ask for which com port",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
                "Reboot",
                "Upload",
                "Monitor"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ShebangConf",
            "type": "shell",
            "detail": "Run all tasks using the com port set in settings",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
                "RebootConf",
                "Upload",
                "MonitorConf"
            ],
            "problemMatcher": [],
            // "group": {
            //     "kind": "build",
            //     "isDefault": true
            // }
        }
    ],
    "inputs": [
        {
            "id": "TEENSY_USB_PORTNAME",
            "description": "What portname the moniter should use",
            "type": "pickString",
            "options": [
                "COM6",
                "COM7"
            ],
            "default": "COM6"
        },
        {
            "id": "TEENSY_USB_PORTNAME_2",
            "description": "What 2nd portname the dual moniter should use",
            "type": "pickString",
            "options": [
                "COM6",
                "COM7"
            ],
            "default": "COM7"
        },
        {
            "id": "TEENSY_BAUDRATE",
            "description": "What standard baudrate the moniter should use",
            "type": "pickString",
            "options": [
                "1200",
                "2400",
                "4800",
                "9600",
                "19200",
                "38400",
                "57600",
                "115200",
                "230400",
                "460800",
                "921600"
            ],
            "default": "115200"
        }
    ]
}