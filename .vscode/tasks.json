{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "process",
            "detail": "Compile project",
            "presentation": {
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "${workspaceFolder}/${config:TOOLCHAIN_OFFSET}/tools/config.bat",
                "build"
            ],
            "options": {
                "statusbar": {
                    "label": "$(database)",
                    "color": "#1ba82e"
                }
            },
            "problemMatcher": {
                "base": "$gcc",
                "pattern": {
                    // "regexp": "^(?:Pre_Build\/)?(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "regexp": "^Pre_Build\/(.*?):(\\d+):(\\d*):?\\s+(?:fatal\\s+)?(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Configure",
            "type": "process",
            "detail": "Configure the CMake project",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "${workspaceFolder}/${config:TOOLCHAIN_OFFSET}/tools/config.bat",
                "config",
                "\"-DTOOLCHAIN_OFFSET:STRING=${config:TOOLCHAIN_OFFSET} ${config:ADDITIONAL_CMAKE_VARS}\""
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Hard Clean",
            "type": "process",
            "detail": "Clean up entire CMake project",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "${workspaceFolder}/${config:TOOLCHAIN_OFFSET}/tools/config.bat",
                "hard_clean",
                "\"-DTOOLCHAIN_OFFSET:STRING=${config:TOOLCHAIN_OFFSET} ${config:ADDITIONAL_CMAKE_VARS}\""
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Upload",
            "type": "process",
            "detail": "Upload compiled binary to teensy",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "${workspaceFolder}/${config:TOOLCHAIN_OFFSET}/tools/config.bat",
                "upload",
                "${input:TEENSY_USB_PORTNAME}"
            ],
            "options": {
                "statusbar": {
                    "label": "$(zap)",
                    "color": "#e6d925"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Upload Back",
            "type": "process",
            "detail": "Upload compiled binary to back teensy",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "${workspaceFolder}/${config:TOOLCHAIN_OFFSET}/tools/config.bat",
                "upload",
                "${config:BACK_TEENSY_PORT}"
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Upload Front",
            "type": "process",
            "detail": "Upload compiled binary to front teensy",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "${workspaceFolder}/${config:TOOLCHAIN_OFFSET}/tools/config.bat",
                "upload",
                "${config:FRONT_TEENSY_PORT}"
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Monitor",
            "type": "shell",
            "detail": "Monitor teensy over a CLI",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "${workspaceFolder}\\${config:TOOLCHAIN_OFFSET}\\tools\\ComMonitor.exe",
                "${input:TEENSY_USB_PORTNAME}",
                "${config:TEENSY_BAUDRATE}",
                "-t${input:TEENSY_COM_TYPE}",
                "-m8",
                "--jsonPath",
                "${workspaceFolder}\\log_lookup.json",
                "-r",
                "-w",
            ],
            "options": {
                "statusbar": {
                    "label": "$(terminal)",
                    "color": "#000000"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Monitor Raw",
            "type": "shell",
            "detail": "Monitor teensy hex values over a CLI",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "${workspaceFolder}\\${config:TOOLCHAIN_OFFSET}\\tools\\ComMonitor.exe",
                "${input:TEENSY_USB_PORTNAME}",
                "${config:TEENSY_BAUDRATE}",
                "-tH",
                "-m8",
                "-r",
                "-w",
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Shebang Back",
            "detail": "Run all tasks required to program back teensy",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
                "Upload Back",
                "Monitor"
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Shebang Front",
            "detail": "Run all tasks required to program front teensy",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
                "Build Front ECU",
                "Upload Front",
                "Monitor"
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Shebang Both",
            "detail": "Run all tasks required to program both teensies",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
                "Upload Back",
                "Build Front ECU",
                "Upload Front",
                "Monitor"
            ],
            "options": {
                "statusbar": {
                    "label": "$(flame)",
                    "color": "#e67c25"
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Front ECU",
            "type": "shell",
            "detail": "Builds for Front teensy",
            "presentation": {
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "python",
                "ECUBuildPick.py",
                "1",
                "&&",
                "${workspaceFolder}/${config:TOOLCHAIN_OFFSET}/tools/config.bat",
                "build",
                "-s"
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": {
                "base": "$gcc",
                "pattern": {
                    "regexp": "^(?:Pre_Build\/)?(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Build Back ECU",
            "type": "shell",
            "detail": "Builds for Back teensy",
            "presentation": {
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "python",
                "ECUBuildPick.py",
                "0",
                "&&",
                "${workspaceFolder}/${config:TOOLCHAIN_OFFSET}/tools/config.bat",
                "build",
                "-s"
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": {
                "base": "$gcc",
                "pattern": {
                    "regexp": "^(?:Pre_Build\/)?(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Clean",
            "type": "process",
            "detail": "Clean up build files",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "${workspaceFolder}/${config:TOOLCHAIN_OFFSET}/tools/config.bat",
                "clean"
            ],
            "options": {
                "statusbar": {
                    "label": "$(refresh)",
                    "color": "#e62525"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Pastebin",
            "type": "shell",
            "detail": "Push lookup table to pastebin",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "python",
            "args": [
                "uploadPaste.py",
            ],
            "options": {
                "statusbar": {
                    "label": "$(file)"
                }
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "TEENSY_COM_TYPE",
            "description": "What type of data the monitor should expect",
            "type": "pickString",
            "options": [
                "Ascii",
                "Hex",
                "Decimal",
                "Binary",
            ],
            "default": "Hex"
        },
        {
            "id": "TEENSY_USB_PORTNAME",
            "description": "What portname should be use",
            "type": "pickString",
            "options": [
                {
                    "label": "Front Teensy",
                    "value": "${config:FRONT_TEENSY_PORT}"
                },
                {
                    "label": "Back Teensy",
                    "value": "${config:BACK_TEENSY_PORT}"
                }
            ],
            "default": "${config:FRONT_TEENSY_PORT}"
        }
    ]
}